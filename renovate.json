{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "group:all"],
  "baseBranches": ["master", "v14"],
  "timezone": "Asia/Jakarta",
  "schedule": ["before 8am on Monday"],
  "minimumReleaseAge": "2 days",
  "major": {
    "enabled": true,
    "separateMajorMinor": true,
    "separateMultipleMajor": true
  },
  "rangeStrategy": "bump",
  "updatePinnedDependencies": false,
  "ignoreDeps": ["node"],
  "packageRules": [
    {
      "matchPackageNames": ["next", "@next/bundle-analyzer", "eslint-config-next"],
      "matchBaseBranches": ["v14"],
      "allowedVersions": "14.x"
    },
    {
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"],
      "matchBaseBranches": ["v14"],
      "allowedVersions": "18.x"
    },
    {
      "matchPackageNames": ["eslint"],
      "matchBaseBranches": ["v14"],
      "allowedVersions": "8.x"
    },
    {
      "matchPackageNames": ["@types/node"],
      "allowedVersions": "20.x"
    }
  ]
}
